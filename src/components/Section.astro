---
interface Props {
  title?: string;
  subtitle?: string;
  centered?: boolean;
  background?: 'white' | 'gray' | 'primary';
  padding?: 'sm' | 'md' | 'lg';
  id?: string;
}

const {
  title,
  subtitle,
  centered = true,
  background = 'white',
  padding = 'lg',
  id,
} = Astro.props;

const bgClasses = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  primary: 'bg-primary-600',
};

const paddingClasses = {
  sm: 'py-12 sm:py-16',
  md: 'py-16 sm:py-20',
  lg: 'py-20 sm:py-28',
};

const textColor = background === 'primary' ? 'text-white' : 'text-gray-900';
const subtitleColor = background === 'primary' ? 'text-primary-100' : 'text-gray-600';
---

<section id={id} class={`${bgClasses[background]} ${paddingClasses[padding]}`}>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    {(title || subtitle) && (
      <div class={`${centered ? 'mx-auto max-w-2xl text-center' : 'max-w-2xl'} mb-12 sm:mb-16`}>
        {title && (
          <h2 class={`text-3xl font-bold tracking-tight sm:text-4xl ${textColor}`}>
            {title}
          </h2>
        )}
        {subtitle && (
          <p class={`mt-4 text-lg ${subtitleColor}`}>
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>
