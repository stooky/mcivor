---
interface Props {
  title: string;
  description?: string;
  primaryButton?: {
    text: string;
    href: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
  };
  variant?: 'primary' | 'gray' | 'white';
}

const {
  title,
  description,
  primaryButton,
  secondaryButton,
  variant = 'primary',
} = Astro.props;

const variantStyles = {
  primary: {
    bg: 'bg-primary-600',
    title: 'text-white',
    description: 'text-primary-100',
    primary: 'bg-white text-primary-600 hover:bg-primary-50',
    secondary: 'border-white text-white hover:bg-primary-700',
  },
  gray: {
    bg: 'bg-gray-900',
    title: 'text-white',
    description: 'text-gray-300',
    primary: 'bg-white text-gray-900 hover:bg-gray-100',
    secondary: 'border-white text-white hover:bg-gray-800',
  },
  white: {
    bg: 'bg-gray-50',
    title: 'text-gray-900',
    description: 'text-gray-600',
    primary: 'bg-primary-600 text-white hover:bg-primary-700',
    secondary: 'border-gray-300 text-gray-700 hover:bg-gray-100',
  },
};

const styles = variantStyles[variant];
---

<section class={`py-16 sm:py-20 ${styles.bg}`}>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class={`text-3xl font-bold tracking-tight sm:text-4xl ${styles.title}`}>
        {title}
      </h2>
      {description && (
        <p class={`mt-4 text-lg ${styles.description}`}>
          {description}
        </p>
      )}
      {(primaryButton || secondaryButton) && (
        <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:justify-center">
          {primaryButton && (
            <a
              href={primaryButton.href}
              class={`inline-flex items-center justify-center rounded-lg px-6 py-3 text-base font-medium shadow-sm transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 ${styles.primary}`}
            >
              {primaryButton.text}
            </a>
          )}
          {secondaryButton && (
            <a
              href={secondaryButton.href}
              class={`inline-flex items-center justify-center rounded-lg border px-6 py-3 text-base font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 ${styles.secondary}`}
            >
              {secondaryButton.text}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>
