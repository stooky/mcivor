---
interface Props {
  title: string;
  description?: string;
  icon?: string;
  href?: string;
  image?: string;
  imageAlt?: string;
  variant?: 'default' | 'bordered' | 'elevated';
}

const {
  title,
  description,
  icon,
  href,
  image,
  imageAlt = '',
  variant = 'default',
} = Astro.props;

const variantClasses = {
  default: 'bg-white',
  bordered: 'bg-white border border-gray-200',
  elevated: 'bg-white shadow-lg',
};

const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={[
    'group block rounded-xl p-6 transition-all',
    variantClasses[variant],
    href && 'hover:shadow-lg hover:-translate-y-1',
  ]}
>
  {image && (
    <div class="mb-4 overflow-hidden rounded-lg">
      <img
        src={image}
        alt={imageAlt}
        class="h-48 w-full object-cover transition-transform group-hover:scale-105"
      />
    </div>
  )}

  {icon && (
    <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary-100 text-primary-600">
      <Fragment set:html={icon} />
    </div>
  )}

  <h3 class:list={[
    'text-lg font-semibold text-gray-900',
    href && 'group-hover:text-primary-600',
  ]}>
    {title}
  </h3>

  {description && (
    <p class="mt-2 text-gray-600">
      {description}
    </p>
  )}

  <slot />
</Tag>
