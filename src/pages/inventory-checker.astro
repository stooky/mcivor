---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site';

// Load inventory data
import inventoryData from '../../data/inventory.json';

const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;

// Group inventory by location
const locations = [...new Set(inventoryData.inventory.map(item => item.location))];

// Get unique unit types for filter
const unitTypes = [...new Set(inventoryData.inventory.map(item => item.unit))].sort();

// Get unique conditions for filter
const conditions = [...new Set(inventoryData.inventory.map(item => item.condition))].sort();
---

<Layout
  title="Container Inventory Checker"
  description="Check our current shipping container inventory. 20ft, 40ft, standard, high cube containers available. Request a quote for pricing and delivery to Saskatchewan."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl">
          Container Inventory
        </h1>
        <p class="mt-4 text-lg text-gray-300">
          Browse our current stock across Western Canada. Request a quote for pricing and delivery.
        </p>
        <p class="mt-2 text-sm text-gray-400">
          Last updated: {new Date(inventoryData.lastUpdated).toLocaleDateString('en-CA', { year: 'numeric', month: 'long', day: 'numeric' })}
        </p>
      </div>
    </div>
  </section>

  <!-- Filters -->
  <section class="border-b border-gray-200 bg-white py-4 sticky top-16 z-40 shadow-sm">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap items-center gap-4">
        <div class="flex items-center gap-2">
          <label for="filter-location" class="text-sm font-medium text-gray-700">Location:</label>
          <select id="filter-location" class="rounded-lg border-gray-300 text-sm focus:border-primary-500 focus:ring-primary-500">
            <option value="">All Locations</option>
            {locations.map(loc => (
              <option value={loc}>{loc}</option>
            ))}
          </select>
        </div>
        <div class="flex items-center gap-2">
          <label for="filter-unit" class="text-sm font-medium text-gray-700">Size:</label>
          <select id="filter-unit" class="rounded-lg border-gray-300 text-sm focus:border-primary-500 focus:ring-primary-500">
            <option value="">All Sizes</option>
            {unitTypes.map(unit => (
              <option value={unit}>{unit}</option>
            ))}
          </select>
        </div>
        <div class="flex items-center gap-2">
          <label for="filter-condition" class="text-sm font-medium text-gray-700">Condition:</label>
          <select id="filter-condition" class="rounded-lg border-gray-300 text-sm focus:border-primary-500 focus:ring-primary-500">
            <option value="">All Conditions</option>
            {conditions.map(cond => (
              <option value={cond}>{cond}</option>
            ))}
          </select>
        </div>
        <div class="ml-auto text-sm text-gray-500">
          <span id="result-count">{inventoryData.inventory.length}</span> containers found
        </div>
      </div>
    </div>
  </section>

  <!-- Inventory Table -->
  <section class="py-8">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <!-- Mobile Cards -->
      <div class="grid gap-4 sm:hidden" id="inventory-cards">
        {inventoryData.inventory.map((item) => (
          <div
            class="inventory-item rounded-xl border border-gray-200 bg-white p-4 shadow-sm"
            data-location={item.location}
            data-unit={item.unit}
            data-condition={item.condition}
            data-id={item.id}
          >
            <div class="flex items-start justify-between">
              <div>
                <span class="inline-flex items-center rounded-full bg-primary-100 px-2.5 py-0.5 text-xs font-medium text-primary-700">
                  {item.location}
                </span>
                <h3 class="mt-2 text-lg font-semibold text-gray-900">{item.unit}</h3>
                <p class="text-sm text-gray-600">{item.condition}</p>
              </div>
              <div class="text-right">
                <p class="text-sm text-gray-500">Qty</p>
                <p class="text-lg font-bold text-gray-900">{item.qty}</p>
              </div>
            </div>
            <button
              type="button"
              class="quote-btn mt-4 w-full rounded-lg bg-primary-600 px-4 py-2.5 text-sm font-semibold text-white transition-colors hover:bg-primary-500"
              data-id={item.id}
              data-unit={item.unit}
              data-condition={item.condition}
              data-location={item.location}
            >
              Get Quote
            </button>
          </div>
        ))}
      </div>

      <!-- Desktop Table -->
      <div class="hidden sm:block overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Location</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Unit</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Condition</th>
              <th scope="col" class="px-6 py-3 text-center text-xs font-semibold uppercase tracking-wider text-gray-500">Qty</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-semibold uppercase tracking-wider text-gray-500">Action</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200" id="inventory-table">
            {inventoryData.inventory.map((item, index) => (
              <tr
                class={`inventory-item ${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'} hover:bg-primary-50 transition-colors`}
                data-location={item.location}
                data-unit={item.unit}
                data-condition={item.condition}
                data-id={item.id}
              >
                <td class="whitespace-nowrap px-6 py-4">
                  <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-700">
                    {item.location}
                  </span>
                </td>
                <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900">{item.unit}</td>
                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-600">
                  <span class={`inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${
                    item.condition === 'One Tripper' ? 'bg-green-100 text-green-700' :
                    item.condition === 'CW' ? 'bg-blue-100 text-blue-700' :
                    'bg-gray-100 text-gray-700'
                  }`}>
                    {item.condition}
                  </span>
                </td>
                <td class="whitespace-nowrap px-6 py-4 text-center text-sm font-semibold text-gray-900">{item.qty}</td>
                <td class="whitespace-nowrap px-6 py-4 text-right">
                  <button
                    type="button"
                    class="quote-btn rounded-lg bg-primary-600 px-4 py-2 text-sm font-semibold text-white transition-colors hover:bg-primary-500"
                    data-id={item.id}
                    data-unit={item.unit}
                    data-condition={item.condition}
                    data-location={item.location}
                  >
                    Get Quote
                  </button>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      <!-- No Results -->
      <div id="no-results" class="hidden py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m6 4.125l2.25 2.25m0 0l2.25 2.25M12 13.875l2.25-2.25M12 13.875l-2.25 2.25M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No containers found</h3>
        <p class="mt-2 text-gray-500">Try adjusting your filters or contact us for special orders.</p>
        <a href={phoneLink} class="mt-4 inline-flex items-center gap-2 text-primary-600 hover:text-primary-500">
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
          Call {siteConfig.contact.phone}
        </a>
      </div>
    </div>
  </section>

  <!-- Info Section -->
  <section class="border-t border-gray-200 bg-gray-50 py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-8 md:grid-cols-3">
        <div class="text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-primary-100 text-primary-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
            </svg>
          </div>
          <h3 class="mt-4 font-semibold text-gray-900">Delivery to Saskatchewan</h3>
          <p class="mt-2 text-sm text-gray-600">We arrange transport from any depot location to your site in Saskatchewan.</p>
        </div>
        <div class="text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-green-100 text-green-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="mt-4 font-semibold text-gray-900">One Tripper = Like New</h3>
          <p class="mt-2 text-sm text-gray-600">One Tripper containers made one voyage from Asia. Excellent condition with minimal wear.</p>
        </div>
        <div class="text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-blue-100 text-blue-600">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
            </svg>
          </div>
          <h3 class="mt-4 font-semibold text-gray-900">CW = Cargo Worthy</h3>
          <p class="mt-2 text-sm text-gray-600">CW containers are inspected and certified wind & watertight. Great value for storage.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Quote Modal -->
  <div id="quote-modal" class="fixed inset-0 z-50 hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-black/60 backdrop-blur-sm" id="quote-modal-backdrop"></div>
    <div class="fixed inset-0 overflow-y-auto">
      <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative w-full max-w-md transform rounded-2xl bg-white p-6 shadow-2xl transition-all">
          <button
            type="button"
            id="quote-modal-close"
            class="absolute right-4 top-4 rounded-lg p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>

          <h3 class="text-xl font-bold text-gray-900">Request a Quote</h3>
          <p class="mt-2 text-sm text-gray-600">
            <span id="modal-unit" class="font-medium"></span> · <span id="modal-condition"></span> · <span id="modal-location"></span>
          </p>

          <form id="quote-form" class="mt-6 space-y-4">
            <input type="hidden" name="item_id" id="form-item-id" />

            <div>
              <label for="quote-name" class="block text-sm font-medium text-gray-700">Name</label>
              <input
                type="text"
                id="quote-name"
                name="name"
                required
                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                placeholder="Your name"
              />
            </div>

            <div>
              <label for="quote-email" class="block text-sm font-medium text-gray-700">Email</label>
              <input
                type="email"
                id="quote-email"
                name="email"
                required
                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                placeholder="you@example.com"
              />
            </div>

            <div>
              <label for="quote-phone" class="block text-sm font-medium text-gray-700">Phone (optional)</label>
              <input
                type="tel"
                id="quote-phone"
                name="phone"
                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                placeholder="306-555-1234"
              />
            </div>

            <button
              type="submit"
              id="quote-submit"
              class="w-full rounded-lg bg-primary-600 px-4 py-3 font-semibold text-white transition-colors hover:bg-primary-500 disabled:cursor-not-allowed disabled:opacity-50"
            >
              Send Quote Request
            </button>
          </form>

          <!-- Success State -->
          <div id="quote-success" class="hidden text-center">
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-green-100">
              <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <h3 class="mt-4 text-xl font-bold text-gray-900">Quote Request Sent!</h3>
            <p class="mt-2 text-gray-600">We'll get back to you within 1 business day with pricing and delivery options.</p>
            <button
              type="button"
              id="quote-close-success"
              class="mt-6 rounded-lg bg-gray-100 px-4 py-2 font-medium text-gray-700 transition-colors hover:bg-gray-200"
            >
              Close
            </button>
          </div>

          <!-- Error State -->
          <div id="quote-error" class="hidden text-center">
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-red-100">
              <svg class="h-8 w-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </div>
            <h3 class="mt-4 text-xl font-bold text-gray-900">Something went wrong</h3>
            <p class="mt-2 text-gray-600">Please try again or call us at {siteConfig.contact.phone}</p>
            <button
              type="button"
              id="quote-try-again"
              class="mt-6 rounded-lg bg-primary-600 px-4 py-2 font-medium text-white transition-colors hover:bg-primary-500"
            >
              Try Again
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script is:inline>
(function() {
  // Filter elements
  const filterLocation = document.getElementById('filter-location');
  const filterUnit = document.getElementById('filter-unit');
  const filterCondition = document.getElementById('filter-condition');
  const resultCount = document.getElementById('result-count');
  const noResults = document.getElementById('no-results');
  const inventoryItems = document.querySelectorAll('.inventory-item');

  // Modal elements
  const modal = document.getElementById('quote-modal');
  const modalBackdrop = document.getElementById('quote-modal-backdrop');
  const modalClose = document.getElementById('quote-modal-close');
  const quoteForm = document.getElementById('quote-form');
  const quoteSuccess = document.getElementById('quote-success');
  const quoteError = document.getElementById('quote-error');
  const quoteSubmit = document.getElementById('quote-submit');
  const closeSuccess = document.getElementById('quote-close-success');
  const tryAgain = document.getElementById('quote-try-again');

  // Filter function
  function applyFilters() {
    const location = filterLocation.value;
    const unit = filterUnit.value;
    const condition = filterCondition.value;
    let visibleCount = 0;

    inventoryItems.forEach(item => {
      const matchLocation = !location || item.dataset.location === location;
      const matchUnit = !unit || item.dataset.unit === unit;
      const matchCondition = !condition || item.dataset.condition === condition;

      if (matchLocation && matchUnit && matchCondition) {
        item.classList.remove('hidden');
        visibleCount++;
      } else {
        item.classList.add('hidden');
      }
    });

    resultCount.textContent = visibleCount;
    noResults.classList.toggle('hidden', visibleCount > 0);
  }

  filterLocation.addEventListener('change', applyFilters);
  filterUnit.addEventListener('change', applyFilters);
  filterCondition.addEventListener('change', applyFilters);

  // Modal functions
  function openModal(itemId, unit, condition, location) {
    document.getElementById('form-item-id').value = itemId;
    document.getElementById('modal-unit').textContent = unit;
    document.getElementById('modal-condition').textContent = condition;
    document.getElementById('modal-location').textContent = location;

    quoteForm.classList.remove('hidden');
    quoteSuccess.classList.add('hidden');
    quoteError.classList.add('hidden');

    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    modal.classList.add('hidden');
    document.body.style.overflow = '';
    quoteForm.reset();
  }

  // Quote button handlers
  document.querySelectorAll('.quote-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      openModal(
        btn.dataset.id,
        btn.dataset.unit,
        btn.dataset.condition,
        btn.dataset.location
      );
    });
  });

  modalBackdrop.addEventListener('click', closeModal);
  modalClose.addEventListener('click', closeModal);
  closeSuccess.addEventListener('click', closeModal);
  tryAgain.addEventListener('click', () => {
    quoteForm.classList.remove('hidden');
    quoteError.classList.add('hidden');
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
      closeModal();
    }
  });

  // Form submission
  quoteForm.addEventListener('submit', async (e) => {
    e.preventDefault();

    quoteSubmit.disabled = true;
    quoteSubmit.textContent = 'Sending...';

    const formData = new FormData(quoteForm);

    try {
      const response = await fetch('/api/quote.php', {
        method: 'POST',
        body: formData
      });

      const result = await response.json();

      if (result.success) {
        quoteForm.classList.add('hidden');
        quoteSuccess.classList.remove('hidden');
      } else {
        throw new Error(result.message || 'Failed to send');
      }
    } catch (error) {
      console.error('Quote error:', error);
      quoteForm.classList.add('hidden');
      quoteError.classList.remove('hidden');
    } finally {
      quoteSubmit.disabled = false;
      quoteSubmit.textContent = 'Send Quote Request';
    }
  });
})();
</script>

