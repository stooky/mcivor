---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import { siteConfig } from '../config/site';
import heroImage from '../assets/images/sales-hero.webp';

// WhatsApp link with pre-filled message
const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'm interested in renting a shipping container.")}`;
const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;

// Container Types for Rent
const containers = [
  {
    size: "20' Standard",
    dimensions: "20' L × 8' W × 8'6\" H",
    capacity: "1,172 cubic feet",
    ideal: "Short-term projects, seasonal storage, small moves",
  },
  {
    size: "40' Standard",
    dimensions: "40' L × 8' W × 8'6\" H",
    capacity: "2,390 cubic feet",
    ideal: "Renovations, business overflow, construction sites",
  },
  {
    size: "40' High Cube",
    dimensions: "40' L × 8' W × 9'6\" H",
    capacity: "2,694 cubic feet",
    ideal: "Large projects, event storage, maximum flexibility",
  },
];

// Benefits of Renting
const benefits = [
  {
    title: "Flexible Terms",
    description: "Month-to-month rentals with no long-term commitment. Keep it as long as you need, return when you're done.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>`,
  },
  {
    title: "Lower Upfront Cost",
    description: "No large purchase required. Just a simple monthly rental fee that fits your budget.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  },
  {
    title: "We Handle Delivery",
    description: "We deliver to your location and pick up when you're done. No hassle, no extra equipment needed.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" /></svg>`,
  },
  {
    title: "Perfect for Projects",
    description: "Ideal for renovations, construction, seasonal business, or any temporary storage need.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" /></svg>`,
  },
];

// Who rents containers
const renters = [
  { title: "Home Renovators", description: "Store furniture and belongings safely during your renovation project." },
  { title: "People Moving", description: "Bridge the gap between homes. Take your time packing and unpacking." },
  { title: "Seasonal Businesses", description: "Expand storage capacity during busy seasons without permanent commitment." },
  { title: "Construction Sites", description: "Secure tools and materials on-site for the duration of your project." },
  { title: "Event Organizers", description: "Store equipment, supplies, and materials for festivals and events." },
  { title: "Retailers", description: "Handle overflow inventory during peak seasons or sales events." },
];

// Rental process
const process = [
  {
    step: 1,
    title: "Choose Your Size",
    description: "Select the container size that fits your storage needs.",
  },
  {
    step: 2,
    title: "We Deliver",
    description: "We bring the container to your location at your convenience.",
  },
  {
    step: 3,
    title: "Use It",
    description: "Store your items securely for as long as you need.",
  },
  {
    step: 4,
    title: "We Pick Up",
    description: "When you're done, we come and pick it up. Simple!",
  },
];
---

<Layout
  title="Storage Container Rentals"
  description="Rent shipping containers in Saskatchewan. Flexible month-to-month terms. 20ft and 40ft containers available. Delivery and pickup included."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 py-20 sm:py-28">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-10"></div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="inline-flex items-center rounded-full bg-blue-500/10 px-4 py-1.5 text-sm font-medium text-blue-300 ring-1 ring-inset ring-blue-500/20">
            Flexible Month-to-Month Terms
          </span>
          <h1 class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
            Storage Container
            <span class="text-blue-400">Rentals</span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-300">
            Need temporary storage? Rent a shipping container with flexible month-to-month terms. We deliver, you use it, we pick up when you're done. No long-term commitment required.
          </p>

          <!-- Primary CTAs -->
          <div class="mt-10 flex flex-col gap-4 sm:flex-row">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-green-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us Now
            </a>
            <a
              href={phoneLink}
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-white px-6 py-4 text-lg font-semibold text-gray-900 shadow-lg transition-all hover:bg-gray-100 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call {siteConfig.contact.phone}
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="overflow-hidden rounded-2xl shadow-2xl">
            <Image
              src={heroImage}
              alt="Shipping containers available for rent"
              class="w-full h-auto object-cover"
              widths={[600, 900, 1200, 1400]}
              sizes="(max-width: 768px) 100vw, 50vw"
              loading="eager"
            />
          </div>
          <!-- Floating badge -->
          <div class="absolute -bottom-4 -left-4 rounded-xl bg-blue-600 px-4 py-3 shadow-lg">
            <p class="text-sm font-semibold text-white">No Commitment</p>
            <p class="text-lg font-bold text-white">Month-to-Month</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Banner -->
  <div class="bg-blue-600 py-4">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-6 text-center font-bold text-white">
        <span>Flexible Terms</span>
        <span class="hidden sm:inline">•</span>
        <span>Delivery & Pickup Included</span>
        <span class="hidden sm:inline">•</span>
        <span>No Long-Term Contract</span>
      </div>
    </div>
  </div>

  <!-- Google Reviews Widget (after hero) -->
  <ReviewWidget pagePath="/storage-container-rentals" />

  <!-- Container Types -->
  <Section
    title="Containers For Rent"
    subtitle="Choose your size. Flexible month-to-month rentals with delivery throughout Saskatchewan."
    background="gray"
  >
    <div class="grid gap-6 lg:grid-cols-3">
      {containers.map((container, index) => (
        <div class={`relative rounded-2xl bg-white p-6 shadow-sm transition-shadow hover:shadow-lg ${index === 1 ? 'ring-2 ring-blue-500' : ''}`}>
          {index === 1 && (
            <span class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-blue-500 px-4 py-1 text-sm font-semibold text-white">
              Most Popular
            </span>
          )}

          <!-- Container Visual -->
          <div class="aspect-[3/2] overflow-hidden rounded-xl bg-gray-100">
            {index === 0 && (
              <picture>
                <source
                  srcset="/images/containers/20ft-standard-400w.webp 400w, /images/containers/20ft-standard-600w.webp 600w, /images/containers/20ft-standard-800w.webp 800w"
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  type="image/webp"
                />
                <img
                  src="/images/containers/20ft-standard.jpg"
                  alt="20 foot standard shipping container for rent"
                  class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                  width="600"
                  height="400"
                />
              </picture>
            )}
            {index === 1 && (
              <picture>
                <source
                  srcset="/images/containers/40ft-standard-400w.webp 400w, /images/containers/40ft-standard-600w.webp 600w, /images/containers/40ft-standard-800w.webp 800w"
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  type="image/webp"
                />
                <img
                  src="/images/containers/40ft-standard-new.jpg"
                  alt="40 foot standard shipping container for rent"
                  class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                  width="600"
                  height="400"
                />
              </picture>
            )}
            {index === 2 && (
              <picture>
                <source
                  srcset="/images/containers/40ft-highcube-400w.webp 400w, /images/containers/40ft-highcube-600w.webp 600w, /images/containers/40ft-highcube-800w.webp 800w"
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  type="image/webp"
                />
                <img
                  src="/images/containers/40ft-highcube-new.jpg"
                  alt="40 foot high cube shipping container for rent"
                  class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                  width="600"
                  height="400"
                />
              </picture>
            )}
          </div>

          <h3 class="mt-4 text-xl font-bold text-gray-900">{container.size}</h3>

          <dl class="mt-4 space-y-2 text-sm">
            <div class="flex justify-between">
              <dt class="text-gray-500">Dimensions</dt>
              <dd class="font-medium text-gray-900">{container.dimensions}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Capacity</dt>
              <dd class="font-medium text-gray-900">{container.capacity}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Ideal for</dt>
              <dd class="font-medium text-gray-900 text-right max-w-[60%]">{container.ideal}</dd>
            </div>
          </dl>

          <div class="mt-6 flex gap-2">
            <a
              href={whatsappLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-green-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-green-500"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us
            </a>
            <a
              href={phoneLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-blue-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-blue-500"
            >
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call Us
            </a>
          </div>
        </div>
      ))}
    </div>

    <p class="mt-8 text-center text-gray-600">
      Monthly rental rates vary based on container size and condition.
      <br /><strong>Delivery & pickup included within 50km.</strong> <a href={phoneLink} class="font-medium text-blue-600 hover:text-blue-700">Call us</a> for current rates.
    </p>
  </Section>

  <!-- Why Rent Section -->
  <Section
    title="Why Rent a Container?"
    subtitle="The smart choice for temporary storage needs."
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {benefits.map((benefit) => (
        <div class="text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100 text-blue-600">
            <Fragment set:html={benefit.icon} />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{benefit.title}</h3>
          <p class="mt-2 text-gray-600">{benefit.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- How It Works -->
  <Section
    title="How Renting Works"
    subtitle="Simple, hassle-free process from start to finish."
    background="gray"
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {process.map((item) => (
        <div class="relative text-center">
          <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full bg-blue-600 text-xl font-bold text-white">
            {item.step}
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{item.title}</h3>
          <p class="mt-2 text-gray-600">{item.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Who Rents Section -->
  <Section
    title="Who Rents Containers?"
    subtitle="Perfect for temporary storage needs of all kinds."
  >
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {renters.map((renter) => (
        <div class="rounded-lg bg-gray-50 p-6 shadow-sm">
          <h3 class="font-semibold text-gray-900">{renter.title}</h3>
          <p class="mt-2 text-gray-600">{renter.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- On-Site Storage Callout -->
  <Section background="gray">
    <div class="rounded-2xl bg-blue-50 p-8 text-center border-2 border-blue-200">
      <h3 class="text-2xl font-bold text-gray-900">Looking for On-Site Storage?</h3>
      <p class="mt-2 text-gray-600 max-w-2xl mx-auto">
        We also offer secure container storage at our Martensville facility. Store your belongings with us and access them during business hours.
      </p>
      <a
        href="/on-site-storage-rentals"
        class="mt-6 inline-flex items-center gap-2 rounded-lg bg-blue-600 px-6 py-3 font-semibold text-white hover:bg-blue-500 transition-colors"
      >
        Learn About On-Site Storage
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Ready to Rent a Container?"
    description="Contact us today for current availability and rental rates. Flexible terms to fit your project timeline."
    primaryButton={{ text: "Call Now", href: phoneLink }}
    secondaryButton={{ text: "Contact Us", href: "/contact" }}
  />
</Layout>
