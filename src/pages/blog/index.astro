---
import Layout from '../../layouts/Layout.astro';
import Section from '../../components/Section.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

// Get all blog posts, sorted by date (newest first)
const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Featured post is the most recent
const featuredPost = posts[0];
const remainingPosts = posts.slice(1);
---

<Layout
  title="Blog"
  description="Tips, guides, and insights about shipping containers. Learn about buying, renting, and using sea cans for storage, construction, and more."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 py-16 sm:py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <span class="inline-flex items-center rounded-full bg-primary-500/10 px-4 py-1.5 text-sm font-medium text-primary-400 ring-1 ring-inset ring-primary-500/20 mb-4">
          Container Knowledge Hub
        </span>
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
          C-Can Sam Blog
        </h1>
        <p class="mx-auto mt-6 max-w-2xl text-lg text-gray-300">
          Expert insights, buying guides, and tips for getting the most out of your shipping containers. Whether you're buying, renting, or convertingâ€”we've got you covered.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Post -->
  {featuredPost && (
    <Section padding="lg" background="white">
      <div class="mb-8">
        <span class="inline-flex items-center rounded-full bg-primary-100 px-3 py-1 text-sm font-semibold text-primary-700">
          Featured Article
        </span>
      </div>
      <article class="group grid gap-8 lg:grid-cols-2 lg:gap-12 items-center">
        <a href={`/blog/${featuredPost.id}`} class="relative block aspect-[4/3] overflow-hidden rounded-2xl">
          {featuredPost.data.image ? (
            <picture>
              <source
                type="image/webp"
                srcset={`${featuredPost.data.image.replace('.jpg', '-800w.webp')} 800w, ${featuredPost.data.image.replace('.jpg', '-1200w.webp')} 1200w`}
                sizes="(max-width: 1024px) 100vw, 50vw"
              />
              <img
                src={featuredPost.data.image}
                alt={featuredPost.data.imageAlt || featuredPost.data.title}
                class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
            </picture>
          ) : (
            <div class="h-full w-full bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center">
              <svg class="w-24 h-24 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
            </div>
          )}
          <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>
        <div>
          {featuredPost.data.tags && featuredPost.data.tags.length > 0 && (
            <div class="mb-4 flex flex-wrap gap-2">
              {featuredPost.data.tags.slice(0, 3).map((tag: string) => (
                <span class="inline-flex items-center rounded-full bg-primary-50 px-3 py-1 text-xs font-semibold text-primary-700 uppercase tracking-wide">
                  {tag}
                </span>
              ))}
            </div>
          )}
          <h2 class="text-3xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors sm:text-4xl">
            <a href={`/blog/${featuredPost.id}`}>
              {featuredPost.data.title}
            </a>
          </h2>
          <p class="mt-4 text-lg text-gray-600 leading-relaxed">
            {featuredPost.data.description}
          </p>
          <div class="mt-6 flex items-center gap-4">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary-100 text-primary-700 font-bold">
              {featuredPost.data.author?.charAt(0) || 'C'}
            </div>
            <div class="text-sm">
              <p class="font-medium text-gray-900">{featuredPost.data.author || 'C-Can Sam'}</p>
              <time datetime={featuredPost.data.pubDate.toISOString()} class="text-gray-500">
                {featuredPost.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
            </div>
          </div>
          <a
            href={`/blog/${featuredPost.id}`}
            class="mt-8 inline-flex items-center gap-2 rounded-full bg-primary-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-primary-700 transition-colors"
          >
            Read Article
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </article>
    </Section>
  )}

  <!-- More Articles -->
  {remainingPosts.length > 0 && (
    <Section padding="lg" background="gray">
      <div class="mb-10">
        <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl">More Articles</h2>
        <p class="mt-2 text-gray-600">Explore our collection of guides, tips, and insights.</p>
      </div>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {remainingPosts.map((post) => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            href={`/blog/${post.id}`}
            pubDate={post.data.pubDate}
            author={post.data.author}
            image={post.data.image}
            imageAlt={post.data.imageAlt}
            tags={post.data.tags}
          />
        ))}
      </div>
    </Section>
  )}

  <!-- CTA Section -->
  <section class="bg-primary-600 py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white sm:text-4xl">Ready to Find Your Container?</h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-primary-100">
        Whether you're buying, renting, or just exploring options, our team is here to help you find the perfect solution.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="inline-flex items-center justify-center rounded-full bg-white px-8 py-3 text-base font-semibold text-primary-600 shadow-sm hover:bg-gray-50 transition-colors"
        >
          Contact Us
        </a>
        <a
          href="tel:1-844-473-2226"
          class="inline-flex items-center justify-center rounded-full bg-primary-700 px-8 py-3 text-base font-semibold text-white hover:bg-primary-800 transition-colors"
        >
          Call 1-844-473-2226
        </a>
      </div>
    </div>
  </section>
</Layout>
