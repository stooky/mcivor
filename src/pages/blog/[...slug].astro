---
import Layout from '../../layouts/Layout.astro';
import ArticleSchema from '../../components/schema/ArticleSchema.astro';
import { getCollection, render } from 'astro:content';
import { siteConfig } from '../../config/site';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

// Get all posts for related articles
const allPosts = (await getCollection('blog'))
  .filter((p) => !p.data.draft && p.id !== post.id)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = post.data.updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Calculate reading time (rough estimate)
const wordCount = post.body?.split(/\s+/).length || 0;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));

// Generate responsive image srcset
const imageSrcSet = post.data.image ? `
  ${post.data.image.replace('.jpg', '-800w.webp')} 800w,
  ${post.data.image.replace('.jpg', '-1200w.webp')} 1200w
`.trim() : '';
---

<Layout
  title={post.data.title}
  description={post.data.description}
  image={post.data.image}
  imageAlt={post.data.imageAlt}
  type="article"
  publishedTime={post.data.pubDate}
  modifiedTime={post.data.updatedDate}
  author={post.data.author}
>
  <ArticleSchema
    title={post.data.title}
    description={post.data.description}
    image={post.data.image}
    publishedDate={post.data.pubDate}
    modifiedDate={post.data.updatedDate}
    author={post.data.author}
  />

  <!-- Article Header with Featured Image -->
  <header class="relative">
    <!-- Featured Image Background -->
    {post.data.image && (
      <div class="absolute inset-0 h-[50vh] min-h-[400px]">
        <picture>
          <source type="image/webp" srcset={imageSrcSet} sizes="100vw" />
          <img
            src={post.data.image}
            alt={post.data.imageAlt || post.data.title}
            class="h-full w-full object-cover"
          />
        </picture>
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/60 to-gray-900/30"></div>
      </div>
    )}

    <!-- Header Content -->
    <div class="relative mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 pt-32 pb-16 sm:pt-40 sm:pb-24">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <a href="/blog" class="inline-flex items-center text-sm font-medium text-white/80 hover:text-white transition-colors">
          <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Back to Blog
        </a>
      </nav>

      <!-- Tags -->
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="mb-6 flex flex-wrap gap-2">
          {post.data.tags.map((tag: string) => (
            <span class="inline-flex items-center rounded-full bg-white/20 backdrop-blur-sm px-3 py-1 text-sm font-medium text-white">
              {tag}
            </span>
          ))}
        </div>
      )}

      <!-- Title -->
      <h1 class="text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl leading-tight">
        {post.data.title}
      </h1>

      <!-- Description -->
      <p class="mt-6 text-xl text-gray-200 leading-relaxed max-w-3xl">
        {post.data.description}
      </p>

      <!-- Meta Info -->
      <div class="mt-8 flex flex-wrap items-center gap-6">
        <div class="flex items-center gap-3">
          <div class="flex h-12 w-12 items-center justify-center rounded-full bg-primary-500 text-white font-bold text-lg">
            {post.data.author?.charAt(0) || 'C'}
          </div>
          <div>
            <p class="font-semibold text-white">{post.data.author || 'C-Can Sam'}</p>
            <p class="text-sm text-gray-300">
              <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
              {formattedUpdatedDate && ` Â· Updated ${formattedUpdatedDate}`}
            </p>
          </div>
        </div>
        <div class="flex items-center gap-2 text-gray-300">
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <span class="text-sm">{readingTime} min read</span>
        </div>
      </div>
    </div>
  </header>

  <!-- Article Content -->
  <article class="relative bg-white">
    <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
      <!-- Content -->
      <div class="prose prose-lg prose-gray max-w-none
        prose-headings:font-bold prose-headings:tracking-tight
        prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-6
        prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-4
        prose-p:text-gray-600 prose-p:leading-relaxed
        prose-a:text-primary-600 prose-a:font-medium prose-a:no-underline hover:prose-a:underline
        prose-strong:text-gray-900 prose-strong:font-semibold
        prose-ul:my-6 prose-li:my-2
        prose-img:rounded-xl prose-img:shadow-lg prose-img:my-8
        prose-blockquote:border-l-primary-500 prose-blockquote:bg-gray-50 prose-blockquote:py-1 prose-blockquote:px-6 prose-blockquote:rounded-r-lg
      ">
        <Content />
      </div>

      <!-- Share Section -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <p class="text-gray-600 font-medium">Found this helpful? Share it:</p>
          <div class="flex gap-3">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(`${siteConfig.url}/blog/${post.id}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-200 transition-colors"
            >
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
              Twitter
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`${siteConfig.url}/blog/${post.id}`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-200 transition-colors"
            >
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              Facebook
            </a>
          </div>
        </div>
      </div>

      <!-- CTA Box -->
      <div class="mt-12 rounded-2xl bg-gradient-to-br from-primary-50 to-primary-100 p-8 sm:p-10">
        <h3 class="text-2xl font-bold text-gray-900">Ready to Get Started?</h3>
        <p class="mt-3 text-gray-600">
          Whether you need a container for storage, construction, or a creative project, we're here to help you find the perfect solution.
        </p>
        <div class="mt-6 flex flex-col sm:flex-row gap-4">
          <a
            href="/contact"
            class="inline-flex items-center justify-center rounded-full bg-primary-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-primary-700 transition-colors"
          >
            Contact Us Today
          </a>
          <a
            href="tel:1-844-473-2226"
            class="inline-flex items-center justify-center rounded-full bg-white px-6 py-3 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-gray-200 hover:bg-gray-50 transition-colors"
          >
            Call 1-844-473-2226
          </a>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Articles -->
  {allPosts.length > 0 && (
    <section class="bg-gray-50 py-16 sm:py-20">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl mb-10">More Articles</h2>
        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {allPosts.map((relatedPost) => (
            <article class="group flex flex-col overflow-hidden rounded-2xl bg-white shadow-md ring-1 ring-gray-100 transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
              <a href={`/blog/${relatedPost.id}`} class="relative block aspect-[16/10] overflow-hidden">
                {relatedPost.data.image ? (
                  <img
                    src={relatedPost.data.image}
                    alt={relatedPost.data.imageAlt || relatedPost.data.title}
                    class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                    loading="lazy"
                  />
                ) : (
                  <div class="h-full w-full bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center">
                    <svg class="w-12 h-12 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                  </div>
                )}
              </a>
              <div class="flex flex-1 flex-col p-5">
                <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-600 transition-colors line-clamp-2">
                  <a href={`/blog/${relatedPost.id}`}>{relatedPost.data.title}</a>
                </h3>
                <p class="mt-2 text-sm text-gray-600 line-clamp-2">{relatedPost.data.description}</p>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>
