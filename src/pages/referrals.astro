---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import { siteConfig } from '../config/site';

const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'd like to learn more about your referral program.")}`;
const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;

const steps = [
  {
    number: "1",
    title: "Tell Your Friends",
    description: "Share C-Can Sam with friends, family, or colleagues who need storage solutions.",
  },
  {
    number: "2",
    title: "They Mention You",
    description: "When they purchase or rent a container, they provide your name at checkout.",
  },
  {
    number: "3",
    title: "Get Rewarded",
    description: "Once their transaction is complete, we send you a Visa gift card as a thank you!",
  },
];
---

<Layout
  title="Referral Program"
  description="Refer friends to C-Can Sam and earn Visa gift cards! Get rewarded when your referrals purchase or rent a shipping container in Saskatchewan."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 py-20 sm:py-28">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-10"></div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-center">
      <span class="inline-flex items-center rounded-full bg-green-500/10 px-4 py-1.5 text-sm font-medium text-green-300 ring-1 ring-inset ring-green-500/20">
        Earn Rewards
      </span>
      <h1 class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
        We Love
        <span class="text-green-400">Referrals!</span>
      </h1>
      <p class="mx-auto mt-6 max-w-2xl text-lg leading-8 text-gray-300">
        Refer a friend and get a Visa gift card! Simply get your friends and family to provide your name when purchasing or renting a container and we'll send you a gift card as a thank you.
      </p>
    </div>
  </section>

  <!-- How It Works -->
  <Section
    title="How It Works"
    subtitle="Earning rewards is easy. Just three simple steps."
  >
    <div class="grid gap-8 md:grid-cols-3">
      {steps.map((step) => (
        <div class="text-center">
          <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-green-100 text-green-600">
            <span class="text-2xl font-bold">{step.number}</span>
          </div>
          <h3 class="mt-6 text-xl font-semibold text-gray-900">{step.title}</h3>
          <p class="mt-3 text-gray-600">{step.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- What You Get -->
  <Section
    title="Your Reward"
    subtitle="Thank you for spreading the word about C-Can Sam."
    background="gray"
  >
    <div class="mx-auto max-w-2xl">
      <div class="rounded-2xl bg-white p-8 shadow-lg border-2 border-green-500 text-center">
        <div class="mx-auto flex h-20 w-20 items-center justify-center rounded-full bg-green-100">
          <svg class="h-10 w-10 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" />
          </svg>
        </div>
        <h3 class="mt-6 text-2xl font-bold text-gray-900">Visa Gift Card</h3>
        <p class="mt-4 text-gray-600">
          For every successful referral that results in a container purchase or rental, you'll receive a Visa gift card. Use it anywhere Visa is accepted!
        </p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={whatsappLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-3 font-semibold text-white transition-colors hover:bg-green-500"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Learn More
          </a>
          <a
            href={phoneLink}
            class="inline-flex items-center justify-center gap-2 rounded-lg bg-primary-600 px-6 py-3 font-semibold text-white transition-colors hover:bg-primary-500"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
            Call Us
          </a>
        </div>
      </div>
    </div>
  </Section>

  <!-- Eligible Services -->
  <Section
    title="Eligible Services"
    subtitle="Referrals are valid for all our container services."
  >
    <div class="grid gap-6 sm:grid-cols-3">
      <div class="rounded-xl bg-white p-6 shadow-sm border border-gray-200">
        <h3 class="font-semibold text-gray-900">Container Sales</h3>
        <p class="mt-2 text-sm text-gray-600">New and used shipping containers for permanent ownership.</p>
        <a href="/storage-containers-for-sale/" class="mt-4 inline-flex items-center text-sm font-medium text-green-600 hover:text-green-700">
          Learn more →
        </a>
      </div>
      <div class="rounded-xl bg-white p-6 shadow-sm border border-gray-200">
        <h3 class="font-semibold text-gray-900">Container Rentals</h3>
        <p class="mt-2 text-sm text-gray-600">Flexible monthly rentals delivered to your location.</p>
        <a href="/storage-container-rentals/" class="mt-4 inline-flex items-center text-sm font-medium text-green-600 hover:text-green-700">
          Learn more →
        </a>
      </div>
      <div class="rounded-xl bg-white p-6 shadow-sm border border-gray-200">
        <h3 class="font-semibold text-gray-900">On-Site Storage</h3>
        <p class="mt-2 text-sm text-gray-600">Secure storage at your property for any duration.</p>
        <a href="/on-site-storage-rentals/" class="mt-4 inline-flex items-center text-sm font-medium text-green-600 hover:text-green-700">
          Learn more →
        </a>
      </div>
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Start Referring Today"
    description="Know someone who needs storage? Tell them about C-Can Sam and earn rewards!"
    primaryButton={{ text: "Contact Us", href: "/contact/" }}
    secondaryButton={{ text: "Call Now", href: phoneLink }}
  />
</Layout>
