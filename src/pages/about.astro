---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import { siteConfig } from '../config/site';

// Company values
const values = [
  {
    title: 'Quality',
    description: 'New and used containers in excellent condition, built to last.',
  },
  {
    title: 'Flexible',
    description: 'Buy, rent, or store - we have options to fit your needs.',
  },
  {
    title: 'Local',
    description: 'Proudly serving Martensville, Saskatoon, and all of Saskatchewan.',
  },
  {
    title: 'Reliable',
    description: 'Durable, weatherproof containers you can count on.',
  },
];
---

<Layout
  title="About Us"
  description="Learn about C-Can Sam - Saskatchewan's premier seacan solutions provider. Container sales, rentals, and storage in Martensville and Saskatoon area."
>
  <!-- Hero -->
  <Hero
    title="About C-Can Sam"
    subtitle="Saskatchewan's Premier Seacan Solutions Provider"
    size="md"
  />

  <!-- Our Story Section -->
  <Section title="Who We Are">
    <div class="mx-auto max-w-3xl">
      <div class="prose prose-lg prose-gray mx-auto">
        <p>
          C-Can Sam provides quality shipping container solutions to Martensville, Saskatoon,
          and communities throughout Saskatchewan. Whether you're decluttering, moving,
          renovating, or expanding your business, our storage solutions offer the flexibility
          and security you need.
        </p>
        <p>
          We specialize in on-site storage at our facility, off-site delivery to your location, and container sales. With a range
          of durable containers for sale or rent, we provide reliable options for both short-term
          and long-term storage needs. Our seacans are ideal for various uses, from home projects
          to business storage.
        </p>
        <p>
          Based in Martensville, we're proud to serve the Saskatoon area and beyond. Our team is
          here to help you find the right container solution for your needs, whether that's a
          compact 20ft container for personal storage or a spacious 40ft high cube for business
          inventory.
        </p>
      </div>
    </div>
  </Section>

  <!-- Mission & Values Section -->
  <Section
    title="What We Stand For"
    subtitle="The principles that guide our work."
    background="gray"
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {values.map((value) => (
        <div class="text-center">
          <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-primary-100">
            <svg class="h-8 w-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{value.title}</h3>
          <p class="mt-2 text-gray-600">{value.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Services Overview -->
  <Section background="primary">
    <div class="grid gap-8 text-center sm:grid-cols-3">
      <div>
        <div class="text-4xl font-bold text-white">Sales</div>
        <div class="mt-2 text-primary-100">New & Used Containers</div>
      </div>
      <div>
        <div class="text-4xl font-bold text-white">Rentals</div>
        <div class="mt-2 text-primary-100">Flexible Terms Available</div>
      </div>
      <div>
        <div class="text-4xl font-bold text-white">Storage</div>
        <div class="mt-2 text-primary-100">On-Site & Off-Site Options</div>
      </div>
    </div>
  </Section>

  <!-- Container Features -->
  <Section
    title="Why Choose Our Containers?"
    subtitle="Quality seacans for all your storage needs."
  >
    <div class="mx-auto max-w-3xl">
      <div class="grid gap-6 sm:grid-cols-3">
        <div class="text-center rounded-lg bg-gray-50 p-6">
          <svg class="mx-auto h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
          </svg>
          <h3 class="mt-3 font-semibold text-gray-900">Move-in Ready</h3>
          <p class="mt-1 text-sm text-gray-600">Containers delivered ready to use</p>
        </div>
        <div class="text-center rounded-lg bg-gray-50 p-6">
          <svg class="mx-auto h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />
          </svg>
          <h3 class="mt-3 font-semibold text-gray-900">Weatherproof</h3>
          <p class="mt-1 text-sm text-gray-600">Built to withstand Saskatchewan weather</p>
        </div>
        <div class="text-center rounded-lg bg-gray-50 p-6">
          <svg class="mx-auto h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          </svg>
          <h3 class="mt-3 font-semibold text-gray-900">Secure</h3>
          <p class="mt-1 text-sm text-gray-600">Heavy-duty steel construction</p>
        </div>
      </div>
    </div>
  </Section>

  <!-- Location Section -->
  <Section
    title="Come Say Hello"
    subtitle="Stop by the office to learn more about how we can help you reclaim your space."
    background="gray"
  >
    <div class="mx-auto max-w-2xl text-center">
      <div class="rounded-lg bg-white p-6 shadow-sm">
        <div class="flex items-center justify-center gap-2 text-lg font-medium text-gray-900">
          <svg class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
          </svg>
          {siteConfig.contact.address.street}
        </div>
        <p class="mt-1 text-gray-600">
          {siteConfig.contact.address.city}, {siteConfig.contact.address.state} {siteConfig.contact.address.zip}
        </p>
        <div class="mt-4 flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href={`tel:${siteConfig.contact.phone.replace(/\D/g, '')}`}
            class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
            {siteConfig.contact.phone}
          </a>
          <a
            href={`mailto:${siteConfig.contact.email}`}
            class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
            {siteConfig.contact.email}
          </a>
        </div>
      </div>
    </div>
  </Section>

  <!-- Google Reviews Widget -->
  <ReviewWidget pagePath="/about" />

  <!-- CTA -->
  <CTA
    title="Ready to Get Started?"
    description="Contact us today to find the right container solution for your needs."
    primaryButton={{ text: "Call Now", href: `tel:${siteConfig.contact.phone.replace(/\D/g, '')}` }}
    variant="gray"
  />
</Layout>
