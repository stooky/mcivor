---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import { siteConfig } from '../config/site';

// Company values
const values = [
  {
    title: 'Thorough',
    description: 'We never rush the process. Every component is properly cleaned.',
  },
  {
    title: 'Experienced',
    description: 'Over a decade of professional duct cleaning in Saskatoon.',
  },
  {
    title: 'Local',
    description: 'Proudly serving Saskatoon and surrounding areas.',
  },
  {
    title: 'Reliable',
    description: 'Dependable service you can count on, every time.',
  },
];
---

<Layout
  title="About Us"
  description="Learn about McIvor Power Vac - Saskatoon's trusted duct cleaning professionals. Glen McIvor has over a decade of experience providing thorough, professional service."
>
  <!-- Hero -->
  <Hero
    title="About McIvor Power Vac"
    subtitle="Saskatoon's Trusted Duct Cleaning Professionals"
    size="md"
  />

  <!-- Our Story Section -->
  <Section title="Who We Are">
    <div class="mx-auto max-w-3xl">
      <div class="prose prose-lg prose-gray mx-auto">
        <p>
          Glen McIvor has been providing top notch professional air duct cleaning services
          in Saskatoon and area for over a decade. What started as a commitment to doing
          things right has grown into a trusted name in duct cleaning throughout the region.
        </p>
        <p>
          Many companies rush the process and miss important parts of your furnace, AC and
          duct system. At McIvor Power Vac, we take our time to ensure every component is
          properly cleaned. We believe that quality work takes time, and we never cut corners.
        </p>
        <p>
          Our meticulous approach means your entire HVAC system gets the attention it deserves -
          from the main trunk lines to every register vent in your home. When we're done,
          you'll see the difference and breathe the difference.
        </p>
      </div>
    </div>
  </Section>

  <!-- Mission & Values Section -->
  <Section
    title="What We Stand For"
    subtitle="The principles that guide our work."
    background="gray"
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {values.map((value) => (
        <div class="text-center">
          <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-primary-100">
            <svg class="h-8 w-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{value.title}</h3>
          <p class="mt-2 text-gray-600">{value.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Services Overview -->
  <Section background="primary">
    <div class="grid gap-8 text-center sm:grid-cols-4">
      <div>
        <div class="text-3xl font-bold text-white">Residential</div>
        <div class="mt-2 text-primary-100">Home Duct Cleaning</div>
      </div>
      <div>
        <div class="text-3xl font-bold text-white">Commercial</div>
        <div class="mt-2 text-primary-100">Business HVAC Cleaning</div>
      </div>
      <div>
        <div class="text-3xl font-bold text-white">Dryer Vents</div>
        <div class="mt-2 text-primary-100">Fire Prevention</div>
      </div>
      <div>
        <div class="text-3xl font-bold text-white">Insulation</div>
        <div class="mt-2 text-primary-100">Safe Removal</div>
      </div>
    </div>
  </Section>

  <!-- Why Choose Us -->
  <Section
    title="Why Choose McIvor Power Vac?"
    subtitle="The difference is in the details."
  >
    <div class="mx-auto max-w-3xl">
      <div class="grid gap-6 sm:grid-cols-3">
        <div class="text-center rounded-lg bg-gray-50 p-6">
          <svg class="mx-auto h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="mt-3 font-semibold text-gray-900">We Take Our Time</h3>
          <p class="mt-1 text-sm text-gray-600">Thorough cleaning, never rushed</p>
        </div>
        <div class="text-center rounded-lg bg-gray-50 p-6">
          <svg class="mx-auto h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="mt-3 font-semibold text-gray-900">Complete System</h3>
          <p class="mt-1 text-sm text-gray-600">Furnace, AC, and all ductwork</p>
        </div>
        <div class="text-center rounded-lg bg-gray-50 p-6">
          <svg class="mx-auto h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
          </svg>
          <h3 class="mt-3 font-semibold text-gray-900">Locally Owned</h3>
          <p class="mt-1 text-sm text-gray-600">Saskatoon based, owner operated</p>
        </div>
      </div>
    </div>
  </Section>

  <!-- Location Section -->
  <Section
    title="Contact Us"
    subtitle="Ready to breathe cleaner air? Get in touch today."
    background="gray"
  >
    <div class="mx-auto max-w-2xl text-center">
      <div class="rounded-lg bg-white p-6 shadow-sm">
        <div class="flex items-center justify-center gap-2 text-lg font-medium text-gray-900">
          <svg class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
          </svg>
          {siteConfig.contact.address.street}
        </div>
        <p class="mt-1 text-gray-600">
          {siteConfig.contact.address.city}, {siteConfig.contact.address.state} {siteConfig.contact.address.zip}
        </p>
        <div class="mt-4 flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href={`tel:${siteConfig.contact.phone.replace(/\D/g, '')}`}
            class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
            {siteConfig.contact.phone}
          </a>
          <a
            href={`mailto:${siteConfig.contact.email}`}
            class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
            {siteConfig.contact.email}
          </a>
        </div>
      </div>
    </div>
  </Section>

  <!-- Google Reviews Widget -->
  <ReviewWidget pagePath="/about" />

  <!-- CTA -->
  <CTA
    title="Ready for Cleaner Air?"
    description="Contact us today to schedule your duct cleaning service."
    primaryButton={{ text: "Call 306-222-3478", href: `tel:${siteConfig.contact.phone.replace(/\D/g, '')}` }}
    variant="gray"
  />
</Layout>
