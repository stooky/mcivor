---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import { siteConfig } from '../config/site';
import heroImage from '../assets/images/sales-hero.webp';

// WhatsApp link with pre-filled message
const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'm interested in buying or renting a shipping container.")}`;
const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;

// C-Can Sam Container Types
const containers = [
  {
    size: "9' Standard",
    dimensions: "9' L × 7' W × 7'6\" H",
    capacity: "390 cubic feet",
    ideal: "Backyard storage, small workshops, tools & garden equipment",
    image: "/images/containers/9-standard.png",
    popular: false,
  },
  {
    size: "20' Standard",
    dimensions: "20' L × 8' W × 8'6\" H",
    capacity: "1,172 cubic feet",
    ideal: "Residential storage, small business inventory, tools & equipment",
    image: "/images/containers/20-standard.png",
    popular: false,
  },
  {
    size: "40' Standard",
    dimensions: "40' L × 8' W × 8'6\" H",
    capacity: "2,390 cubic feet",
    ideal: "Business inventory, construction sites, pop-up shops",
    image: "/images/containers/40-standard.png",
    popular: true,
  },
  {
    size: "40' High Cube",
    dimensions: "40' L × 8' W × 9'6\" H",
    capacity: "2,694 cubic feet",
    ideal: "Oversized items, workshops, studios, maximum storage",
    image: "/images/containers/40-high-cube.png",
    popular: false,
  },
];

// Service Options
const services = [
  {
    id: 'rentals',
    title: 'Container Rentals',
    description: 'Choose flexible rental options designed to accommodate both temporary needs and long-term storage. Perfect for renovations, seasonal storage, or business inventory.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  },
  {
    id: 'sales',
    title: 'Container Sales',
    description: 'Invest in a seacan for a permanent, secure storage solution. Our containers are built to last, offering peace of mind for whatever you need to store.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" /></svg>`,
  },
  {
    id: 'onsite',
    title: 'On-Site Storage',
    description: 'Secure and weatherproof storage at our Martensville facility. Safe, accessible, and monitored for your peace of mind.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 21v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21m0 0h4.5V3.545M12.75 21h7.5V10.75M2.25 21h1.5m18 0h-18M2.25 9l4.5-1.636M18.75 3l-1.5.545m0 6.205l3 1m1.5.5l-1.5-.5M6.75 7.364V3h-3v18m3-13.636l10.5-3.819" /></svg>`,
  },
  {
    id: 'offsite',
    title: 'Off-Site Storage',
    description: 'Keep your container at your property for easy access. We deliver to your preferred location within Saskatchewan for convenient storage.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" /></svg>`,
  },
];

// How it works process
const process = [
  {
    step: 1,
    title: 'Choose Your Container',
    description: 'Select the right seacan size and rental or purchase option for your needs. Browse the website or reach out to us for a fast, <a href="/contact" class="text-primary-600 hover:underline">friendly quote</a>.',
  },
  {
    step: 2,
    title: 'We Deliver',
    description: 'We\'ll bring your container to your preferred location within Saskatchewan. We can deliver anywhere in Canada, <a href="/contact" class="text-primary-600 hover:underline">request a quote</a> for rates.',
  },
  {
    step: 3,
    title: 'Store Your Stuff',
    description: 'Use your seacan to keep your belongings safe and secure, either on-site or off-site. You can purchase anti-theft locks for your container. We also sell lock boxes that can be fastened to the conatiner if not already equipped.',
  },
];
---

<Layout
  title="Storage Container Sales & Rentals"
  description="Shipping containers for sale and rent in Saskatchewan. 20ft standard, 40ft standard, and 40ft high cube containers. On-site delivery and off-site storage available."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 py-20 sm:py-28">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-10"></div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="inline-flex items-center rounded-full bg-primary-500/10 px-4 py-1.5 text-sm font-medium text-primary-300 ring-1 ring-inset ring-primary-500/20">
            New & Used Containers Available
          </span>
          <h1 class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
            Storage Container
            <span class="text-primary-400">Sales & Rentals</span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-300">
            With new inventory arriving every week, you can count on us to have a shipping container that suits your needs. Delivery available throughout Saskatchewan.
          </p>

          <!-- Primary CTAs -->
          <div class="mt-10 flex flex-col gap-4 sm:flex-row">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-green-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us Now
            </a>
            <a
              href={phoneLink}
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-white px-6 py-4 text-lg font-semibold text-gray-900 shadow-lg transition-all hover:bg-gray-100 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call {siteConfig.contact.phone}
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="overflow-hidden rounded-2xl shadow-2xl">
            <Image
              src={heroImage}
              alt="40 foot shipping containers with side doors at C-Can Sam facility"
              class="w-full h-auto object-cover"
              widths={[600, 900, 1200, 1400]}
              sizes="(max-width: 768px) 100vw, 50vw"
              loading="eager"
            />
          </div>
          <!-- Floating badge -->
          <div class="absolute -bottom-4 -left-4 rounded-xl bg-primary-600 px-4 py-3 shadow-lg">
            <p class="text-sm font-semibold text-white">Serving</p>
            <p class="text-lg font-bold text-white">All of Saskatchewan</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Banner -->
  <div class="bg-primary-600 py-4">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-6 text-center font-bold text-white">
        <span>New & Used Containers</span>
        <span class="hidden sm:inline">•</span>
        <span>Sales & Rentals</span>
        <span class="hidden sm:inline">•</span>
        <span>Delivery Available</span>
      </div>
    </div>
  </div>

  <!-- Google Reviews Widget (after hero) -->
  <ReviewWidget pagePath="/storage-container-sales-and-rentals" />

  <!-- Container Types -->
  <Section
    title="Sea Cans For Sale or Rent"
    subtitle="New inventory arriving weekly. Available for purchase or flexible rental terms."
    background="gray"
  >
    <div class="grid gap-8 sm:grid-cols-2">
      {containers.map((container) => (
        <div class={`relative rounded-2xl bg-white p-6 shadow-sm transition-shadow hover:shadow-lg ${container.popular ? 'ring-2 ring-primary-500' : ''}`}>
          {container.popular && (
            <span class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-primary-500 px-4 py-1 text-sm font-semibold text-white">
              Most Popular
            </span>
          )}

          <!-- Container Visual -->
          <div class="flex items-center justify-center bg-transparent p-4">
            <img
              src={container.image}
              alt={`${container.size} shipping container - C-Can Sam Saskatchewan`}
              class="h-auto w-full max-h-64 object-contain"
              loading="lazy"
              decoding="async"
            />
          </div>

          <h3 class="mt-4 text-xl font-bold text-gray-900">{container.size}</h3>

          <dl class="mt-4 space-y-2 text-sm">
            <div class="flex justify-between">
              <dt class="text-gray-500">Dimensions</dt>
              <dd class="font-medium text-gray-900">{container.dimensions}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Capacity</dt>
              <dd class="font-medium text-gray-900">{container.capacity}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Ideal for</dt>
              <dd class="font-medium text-gray-900 text-right max-w-[60%]">{container.ideal}</dd>
            </div>
          </dl>

          <div class="mt-6 flex gap-2">
            <a
              href={whatsappLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-green-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-green-500"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us
            </a>
            <a
              href={phoneLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-primary-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-primary-500"
            >
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call Us
            </a>
          </div>
        </div>
      ))}
    </div>

    <p class="mt-8 text-center text-gray-600">
      Prices vary based on container condition (new/used) and whether you're buying or renting.
      <br /><strong>Delivery available throughout Saskatchewan.</strong> <a href={phoneLink} class="font-medium text-primary-600 hover:text-primary-700">Call us</a> for current pricing and availability.
    </p>

    <!-- Special Orders -->
    <div class="mt-12 rounded-xl bg-secondary-50 p-8 text-center">
      <h3 class="text-xl font-bold text-gray-900">Special Orders</h3>
      <p class="mt-2 text-gray-600">Want something special? Get in touch with us and we'll help you find what you're looking for.</p>
      <a
        href="/contact"
        class="mt-4 inline-flex items-center rounded-lg bg-secondary-600 px-5 py-2.5 text-sm font-medium text-white shadow-sm transition-colors hover:bg-secondary-700"
      >
        Contact Us
      </a>
    </div>
  </Section>

  <!-- Service Options -->
  <Section
    title="How We Can Help"
    subtitle="Flexible options to meet your storage needs."
  >
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {services.map((service) => (
        <div id={service.id} class="rounded-xl bg-gray-50 p-6 text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-xl bg-primary-100 text-primary-600">
            <Fragment set:html={service.icon} />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{service.title}</h3>
          <p class="mt-2 text-sm text-gray-600">{service.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- How It Works -->
  <Section
    title="About Our Seacans For Sale or Rent"
    subtitle="Getting started is easy."
    background="gray"
  >
    <div class="grid gap-8 sm:grid-cols-3">
      {process.map((item) => (
        <div class="relative text-center">
          <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full bg-primary-600 text-xl font-bold text-white">
            {item.step}
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{item.title}</h3>
          <p class="mt-2 text-gray-600" set:html={item.description} />
        </div>
      ))}
    </div>
  </Section>

  <!-- Service Areas -->
  <Section
    id="areas"
    title="Service Area"
    subtitle="Proudly serving all of Saskatchewan."
  >
    <div class="mx-auto max-w-2xl text-center">
      <div class="flex items-center justify-center gap-2 rounded-lg bg-gray-50 p-6 shadow-sm">
        <svg class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
        </svg>
        <span class="text-lg font-medium text-gray-900">Located in the Martensville, Saskatoon, Warman & Area</span>
      </div>
      <p class="mt-4 text-gray-600">
        Delivery available throughout Saskatchewan. Not sure if we service your area? Give us a call at {siteConfig.contact.phone} and we'll let you know!
      </p>
    </div>
  </Section>

  <!-- FAQ Section -->
  <Section title="Frequently Asked Questions" background="gray">
    <div class="mx-auto max-w-3xl divide-y divide-gray-200">
      <details class="group py-6">
        <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-gray-900">
          What sizes of containers do you offer?
          <svg class="h-5 w-5 text-gray-500 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <p class="mt-4 text-gray-600">
          We offer 20ft standard containers, 40ft standard containers, and 40ft high cube containers.
          Each size is suited for different storage needs - from personal household storage to large
          business inventory and equipment.
        </p>
      </details>
      <details class="group py-6">
        <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-gray-900">
          Should I rent or buy a container?
          <svg class="h-5 w-5 text-gray-500 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <p class="mt-4 text-gray-600">
          It depends on your needs! Rentals are perfect for short-term projects like renovations or
          seasonal storage. Purchasing is a smart investment if you need long-term storage or want
          to use the container for creative projects like workshops or mobile offices.
        </p>
      </details>
      <details class="group py-6">
        <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-gray-900">
          Do you deliver containers?
          <svg class="h-5 w-5 text-gray-500 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <p class="mt-4 text-gray-600">
          Yes! We deliver containers throughout Saskatchewan. We can bring your container to your
          preferred location, whether it's your home, business, construction site, or farm.
        </p>
      </details>
      <details class="group py-6">
        <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-gray-900">
          What is a high cube container?
          <svg class="h-5 w-5 text-gray-500 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <p class="mt-4 text-gray-600">
          A high cube container is one foot taller than a standard container, giving you extra
          vertical storage space. It's perfect for storing oversized items or creating taller
          interior spaces for workshops, studios, or retail spaces.
        </p>
      </details>
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Need a Shipping Container?"
    description="We're here to help with your shipping container needs! Whether you're looking to buy or rent, our team is ready to guide you."
    primaryButton={{ text: "Call Now", href: `tel:${siteConfig.contact.phone.replace(/\D/g, '')}` }}
    secondaryButton={{ text: "Contact Us", href: "/contact" }}
  />
</Layout>
