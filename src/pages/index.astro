---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import FeatureGrid from '../components/FeatureGrid.astro';
import Card from '../components/Card.astro';
import Testimonial from '../components/Testimonial.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import { siteConfig } from '../config/site';
import heroBg from '../assets/images/hero-bg.webp';

// McIvor Power Vac Services
const features = [
  {
    title: 'Residential Duct Cleaning',
    description: 'Complete cleaning of your home\'s air ducts, furnace, and HVAC system. Breathe cleaner air and improve your home\'s air quality.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" /></svg>`,
    href: '/residential-duct-cleaning',
  },
  {
    title: 'Commercial Duct Cleaning',
    description: 'Professional duct cleaning services for businesses, offices, and commercial buildings. Keep your employees and customers breathing clean air.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h1.5m-1.5 3h1.5m-1.5 3h1.5m3-6H15m-1.5 3H15m-1.5 3H15M9 21v-3.375c0-.621.504-1.125 1.125-1.125h3.75c.621 0 1.125.504 1.125 1.125V21" /></svg>`,
    href: '/commercial-duct-cleaning',
  },
  {
    title: 'Dryer Vent Cleaning',
    description: 'Prevent fire hazards and improve dryer efficiency with professional dryer vent cleaning. Essential maintenance for every home.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 00.495-7.467 5.99 5.99 0 00-1.925 3.546 5.974 5.974 0 01-2.133-1A3.75 3.75 0 0012 18z" /></svg>`,
    href: '/dryer-vent-cleaning',
  },
  {
    title: 'Insulation Removal',
    description: 'Safe and efficient removal of old, damaged, or contaminated insulation. Prepare your home for new insulation installation.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M14.25 9.75L16.5 12l-2.25 2.25m-4.5 0L7.5 12l2.25-2.25M6 20.25h12A2.25 2.25 0 0020.25 18V6A2.25 2.25 0 0018 3.75H6A2.25 2.25 0 003.75 6v12A2.25 2.25 0 006 20.25z" /></svg>`,
    href: '/insulation-removal',
  },
];

// Customer testimonials
const testimonials = [
  {
    quote: "Glen did an amazing job cleaning our ducts. Very thorough and professional. Our air quality has noticeably improved!",
    author: "Jennifer M.",
    role: "Homeowner",
    company: "Saskatoon, SK",
  },
  {
    quote: "Fast, efficient service. Glen took the time to show me what he cleaned and explained everything. Highly recommend!",
    author: "Robert K.",
    role: "Homeowner",
    company: "Saskatoon, SK",
  },
  {
    quote: "We've used McIvor Power Vac for years. Always reliable and does excellent work. Our furnace runs better after every cleaning.",
    author: "Susan T.",
    role: "Property Manager",
    company: "Saskatoon, SK",
  },
];
---

<Layout title="Professional Duct Cleaning Saskatoon">
  <!-- Hero Section -->
  <Hero
    title="Professional Duct Cleaning in Saskatoon"
    subtitle="Glen McIvor has been providing top notch professional air duct cleaning services in Saskatoon and area for over a decade. We meticulously clean your entire furnace, AC and duct system - not rushing the process like many companies do."
    primaryCta={{ text: "Call 306-222-3478", href: "tel:306-222-3478", variant: "primary" }}
    secondaryCta={{ text: "Our Services", href: "#services", variant: "secondary" }}
    backgroundImage={heroBg}
  />

  <!-- Contact Banner -->
  <div class="bg-secondary-600 text-white py-3">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-4 text-center">
        <span class="font-semibold">Saskatoon's Trusted Duct Cleaning Professionals</span>
        <span class="hidden sm:inline">|</span>
        <a href={`tel:${siteConfig.contact.phone}`} class="font-bold hover:underline">
          {siteConfig.contact.phone}
        </a>
      </div>
    </div>
  </div>

  <!-- Services Section -->
  <Section
    id="services"
    title="Our Duct Cleaning Services"
    subtitle="Professional air duct cleaning services for residential and commercial properties in Saskatoon and surrounding areas."
    background="gray"
  >
    <FeatureGrid features={features} columns={4} />
  </Section>

  <!-- Why Choose Us Section -->
  <Section
    title="Why Choose McIvor Power Vac?"
    subtitle="Experience the difference of thorough, professional duct cleaning."
  >
    <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
      <div>
        <p class="text-lg text-gray-600">
          Many companies rush the process and miss important parts of your furnace, AC and duct system.
          At McIvor Power Vac, we take our time to ensure every component is properly cleaned.
          With over a decade of experience serving Saskatoon and area, you can trust us to
          improve your home's air quality.
        </p>
        <ul class="mt-8 space-y-4">
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>Thorough Cleaning</strong> - We don't rush the process</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>Experienced</strong> - Over a decade of professional service</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>Complete System</strong> - Furnace, AC, and all ductwork</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>Local Service</strong> - Proudly serving Saskatoon and area</span>
          </li>
        </ul>
        <div class="mt-8">
          <a
            href="/about"
            class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700"
          >
            Learn more about us
            <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
      <div class="relative">
        <!-- Service Highlights Grid -->
        <div class="grid grid-cols-2 gap-4">
          <div class="rounded-xl bg-primary-50 p-6 text-center">
            <div class="text-3xl font-bold text-primary-600">10+</div>
            <div class="mt-1 text-sm text-gray-600">Years Experience</div>
          </div>
          <div class="rounded-xl bg-secondary-50 p-6 text-center">
            <div class="text-3xl font-bold text-secondary-600">100%</div>
            <div class="mt-1 text-sm text-gray-600">Satisfaction</div>
          </div>
          <div class="rounded-xl bg-secondary-50 p-6 text-center">
            <div class="text-3xl font-bold text-secondary-600">Residential</div>
            <div class="mt-1 text-sm text-gray-600">& Commercial</div>
          </div>
          <div class="rounded-xl bg-primary-50 p-6 text-center">
            <div class="text-3xl font-bold text-primary-600">Local</div>
            <div class="mt-1 text-sm text-gray-600">Saskatoon Based</div>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Google Reviews Widget -->
  <ReviewWidget pagePath="/" />

  <!-- CTA Section -->
  <CTA
    title="Ready for Cleaner Air?"
    description="Contact us today to schedule your duct cleaning service. We're here to help improve your home's air quality!"
    primaryButton={{ text: "Contact Us", href: "/contact" }}
    secondaryButton={{ text: "Call 306-222-3478", href: "tel:306-222-3478" }}
  />
</Layout>
