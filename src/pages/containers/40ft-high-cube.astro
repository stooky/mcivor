---
import Layout from '../../layouts/Layout.astro';
import Section from '../../components/Section.astro';
import CTA from '../../components/CTA.astro';
import ReviewWidget from '../../components/ReviewWidget.astro';
import ProductSchema from '../../components/schema/ProductSchema.astro';
import { siteConfig } from '../../config/site';

const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'm interested in the 40ft High Cube Container.")}`;
const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;

const specs = [
  { label: "Length", value: "40 feet (12.2m)" },
  { label: "Width", value: "8 feet (2.44m)" },
  { label: "Height", value: "9 feet 6 inches (2.9m)" },
  { label: "Interior Capacity", value: "2,694 cubic feet" },
  { label: "Max Payload", value: "58,598 lbs (26,580 kg)" },
  { label: "Tare Weight", value: "8,775 lbs (3,980 kg)" },
];

const features = [
  "Extra 1 foot of vertical space",
  "Wind and watertight construction",
  "Secure lockbox for padlocks",
  "Marine-grade plywood flooring",
  "Forklift pockets for easy transport",
  "Double cargo doors with rubber seals",
];

const useCases = [
  { title: "Oversized Equipment", description: "Extra height for tall machinery, vehicles, and industrial equipment." },
  { title: "Workshops & Studios", description: "Transform into spacious workshops, art studios, or creative spaces." },
  { title: "Retail Spaces", description: "Extra headroom creates comfortable retail and dining environments." },
  { title: "Living Conversions", description: "Popular choice for container homes and office conversions." },
];
---

<Layout
  title="40ft High Cube Container"
  description="40ft high cube shipping container for sale or rent in Saskatchewan. Extra height: 40ft L x 8ft W x 9ft 6in H. Perfect for oversized items, workshops, studios, and container conversions."
>
  <ProductSchema slug="40ft-high-cube" image="/images/containers/40ft-highcube-new.jpg" />

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 py-20 sm:py-28">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-10"></div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <a href="/storage-containers-for-sale/" class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-white mb-4">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
            </svg>
            Back to All Containers
          </a>
          <span class="inline-flex items-center rounded-full bg-primary-500/10 px-4 py-1.5 text-sm font-medium text-primary-300 ring-1 ring-inset ring-primary-500/20">
            +1 Foot Extra Height
          </span>
          <h1 class="mt-4 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
            40ft High Cube
            <span class="text-green-400">Container</span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-300">
            The 40ft high cube container is the go-to solution for those who need added vertical space. With an extra foot of height compared to standard containers, it's ideal for oversized items, machinery, and creative conversions like workshops, studios, or retail spaces.
          </p>

          <!-- Quick Specs -->
          <div class="mt-8 flex flex-wrap gap-4">
            <div class="rounded-lg bg-white/10 px-4 py-2">
              <span class="text-gray-400 text-sm">Length</span>
              <p class="text-white font-semibold">40 feet</p>
            </div>
            <div class="rounded-lg bg-white/10 px-4 py-2">
              <span class="text-gray-400 text-sm">Width</span>
              <p class="text-white font-semibold">8 feet</p>
            </div>
            <div class="rounded-lg bg-primary-500/20 px-4 py-2 ring-2 ring-primary-400">
              <span class="text-primary-300 text-sm">Height</span>
              <p class="text-white font-semibold">9'6" (+1')</p>
            </div>
          </div>

          <!-- CTAs -->
          <div class="mt-10 flex flex-col gap-4 sm:flex-row">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-green-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Get a Quote
            </a>
            <a
              href={phoneLink}
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-white px-6 py-4 text-lg font-semibold text-gray-900 shadow-lg transition-all hover:bg-gray-100 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call {siteConfig.contact.phone}
            </a>
          </div>
        </div>

        <!-- Container Image -->
        <div class="relative">
          <div class="overflow-hidden rounded-2xl shadow-2xl bg-gray-800">
            <picture>
              <source
                srcset="/images/containers/40ft-highcube-400w.webp 400w, /images/containers/40ft-highcube-600w.webp 600w, /images/containers/40ft-highcube-800w.webp 800w"
                sizes="(max-width: 768px) 100vw, 50vw"
                type="image/webp"
              />
              <img
                src="/images/containers/40ft-highcube-new.jpg"
                alt="40ft high cube shipping container"
                class="w-full h-auto object-cover"
                loading="eager"
                width="800"
                height="600"
              />
            </picture>
          </div>
          <!-- Extra Height Badge -->
          <div class="absolute -top-4 -right-4 rounded-xl bg-primary-600 px-4 py-3 shadow-lg">
            <p class="text-sm font-semibold text-white">Extra Height</p>
            <p class="text-lg font-bold text-white">+1 Foot Taller</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Height Comparison -->
  <div class="bg-primary-600 py-6">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-8 text-center text-white">
        <div class="flex items-center gap-3">
          <span class="text-primary-200">Standard Container:</span>
          <span class="font-bold">8'6" height</span>
        </div>
        <svg class="h-6 w-6 hidden sm:block" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
        <div class="flex items-center gap-3">
          <span class="text-primary-200">High Cube:</span>
          <span class="font-bold text-lg">9'6" height</span>
          <span class="rounded-full bg-white/20 px-3 py-1 text-sm font-semibold">+12 inches</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Specifications -->
  <Section
    title="Container Specifications"
    subtitle="Detailed dimensions and capacity information for the 40ft high cube container."
  >
    <div class="grid gap-8 lg:grid-cols-2">
      <div class="rounded-2xl bg-gray-50 p-8">
        <h3 class="text-xl font-bold text-gray-900 mb-6">Dimensions & Capacity</h3>
        <dl class="space-y-4">
          {specs.map((spec) => (
            <div class="flex justify-between border-b border-gray-200 pb-3">
              <dt class="text-gray-600">{spec.label}</dt>
              <dd class="font-semibold text-gray-900">{spec.value}</dd>
            </div>
          ))}
        </dl>
      </div>

      <div class="rounded-2xl bg-green-50 p-8 border-2 border-green-200">
        <h3 class="text-xl font-bold text-gray-900 mb-6">Features</h3>
        <ul class="space-y-3">
          {features.map((feature, index) => (
            <li class="flex items-center gap-3">
              <svg class={`h-5 w-5 flex-shrink-0 ${index === 0 ? 'text-primary-600' : 'text-green-600'}`} fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span class={`text-gray-700 ${index === 0 ? 'font-semibold' : ''}`}>{feature}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </Section>

  <!-- Use Cases -->
  <Section
    title="Perfect For"
    subtitle="The extra vertical space opens up possibilities not available with standard containers."
    background="gray"
  >
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {useCases.map((useCase) => (
        <div class="rounded-xl bg-white p-6 shadow-sm">
          <h3 class="font-semibold text-gray-900">{useCase.title}</h3>
          <p class="mt-2 text-sm text-gray-600">{useCase.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Buy or Rent -->
  <Section
    title="Buy or Rent"
    subtitle="Flexible options to suit your storage needs."
  >
    <div class="grid gap-8 lg:grid-cols-2">
      <div class="rounded-2xl bg-white p-8 shadow-lg border-2 border-green-500">
        <h3 class="text-2xl font-bold text-gray-900">Purchase</h3>
        <p class="mt-2 text-gray-600">Own your container outright. High cubes are popular for conversions and permanent installations.</p>
        <ul class="mt-4 space-y-2 text-sm text-gray-700">
          <li class="flex items-center gap-2">
            <svg class="h-4 w-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            No monthly payments
          </li>
          <li class="flex items-center gap-2">
            <svg class="h-4 w-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Ideal for conversions
          </li>
          <li class="flex items-center gap-2">
            <svg class="h-4 w-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            New & used available
          </li>
        </ul>
        <a href="/storage-containers-for-sale/" class="mt-6 inline-flex items-center gap-2 font-semibold text-green-600 hover:text-green-700">
          View Purchase Options
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>
        </a>
      </div>

      <div class="rounded-2xl bg-white p-8 shadow-lg border-2 border-primary-500">
        <h3 class="text-2xl font-bold text-gray-900">Rental</h3>
        <p class="mt-2 text-gray-600">Flexible monthly rentals when you need extra height temporarily. Delivery and pickup included.</p>
        <ul class="mt-4 space-y-2 text-sm text-gray-700">
          <li class="flex items-center gap-2">
            <svg class="h-4 w-4 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Flexible terms
          </li>
          <li class="flex items-center gap-2">
            <svg class="h-4 w-4 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Delivery included
          </li>
          <li class="flex items-center gap-2">
            <svg class="h-4 w-4 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            On-site or off-site options
          </li>
        </ul>
        <a href="/storage-container-rentals/" class="mt-6 inline-flex items-center gap-2 font-semibold text-primary-600 hover:text-primary-700">
          View Rental Options
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>
        </a>
      </div>
    </div>
  </Section>

  <!-- Google Reviews Widget -->
  <ReviewWidget pagePath="/containers/40ft-high-cube" />

  <!-- CTA -->
  <CTA
    title="Ready for Extra Height?"
    description="Contact us today for pricing and availability on 40ft high cube containers. Delivery available throughout Saskatchewan."
    primaryButton={{ text: "Get a Quote", href: whatsappLink }}
    secondaryButton={{ text: "Call Us", href: phoneLink }}
  />
</Layout>
