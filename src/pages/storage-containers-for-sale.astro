---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import { siteConfig } from '../config/site';
import heroImage from '../assets/images/sales-hero.webp';

// WhatsApp link with pre-filled message
const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'm interested in buying a shipping container.")}`;
const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;

// Container Types for Sale
const containers = [
  {
    size: "20' Standard",
    dimensions: "20' L × 8' W × 8'6\" H",
    capacity: "1,172 cubic feet",
    ideal: "Residential storage, small business inventory, tools & equipment",
  },
  {
    size: "40' Standard",
    dimensions: "40' L × 8' W × 8'6\" H",
    capacity: "2,390 cubic feet",
    ideal: "Business inventory, construction sites, pop-up shops",
  },
  {
    size: "40' High Cube",
    dimensions: "40' L × 8' W × 9'6\" H",
    capacity: "2,694 cubic feet",
    ideal: "Oversized items, workshops, studios, maximum storage",
  },
];

// Benefits of Buying
const benefits = [
  {
    title: "One-Time Investment",
    description: "Own your container outright with no monthly payments. A smart long-term investment for permanent storage needs.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" /></svg>`,
  },
  {
    title: "Full Ownership",
    description: "Modify, paint, or customize your container however you want. Perfect for workshops, studios, or unique projects.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" /></svg>`,
  },
  {
    title: "Asset Value",
    description: "Shipping containers hold their value well. You can resell if your needs change or use as collateral.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941" /></svg>`,
  },
  {
    title: "No Restrictions",
    description: "Place it on your property permanently. No rental agreements, no monthly fees, no time limits.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  },
];

// Who buys containers
const buyers = [
  { title: "Homeowners", description: "Permanent backyard storage for tools, seasonal items, or hobby equipment." },
  { title: "Farmers & Ranchers", description: "Store equipment, feed, and supplies securely on your property." },
  { title: "Contractors", description: "Keep tools and materials secure on job sites or at your shop." },
  { title: "Business Owners", description: "Expand your storage capacity without expensive building construction." },
  { title: "Creative Projects", description: "Convert into workshops, studios, tiny offices, or unique retail spaces." },
  { title: "Preppers & Off-Grid", description: "Secure, weatherproof storage for emergency supplies and equipment." },
];
---

<Layout
  title="Storage Containers For Sale"
  description="Buy new and used shipping containers in Saskatchewan. 20ft and 40ft containers available. One-time purchase, delivery available throughout Saskatchewan."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 py-20 sm:py-28">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-10"></div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="inline-flex items-center rounded-full bg-green-500/10 px-4 py-1.5 text-sm font-medium text-green-300 ring-1 ring-inset ring-green-500/20">
            New & Used Containers In Stock
          </span>
          <h1 class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
            Storage Containers
            <span class="text-green-400">For Sale</span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-300">
            Own your shipping container outright. A one-time investment for permanent, secure storage. New inventory arriving weekly with delivery available throughout Saskatchewan.
          </p>

          <!-- Primary CTAs -->
          <div class="mt-10 flex flex-col gap-4 sm:flex-row">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-green-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us Now
            </a>
            <a
              href={phoneLink}
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-white px-6 py-4 text-lg font-semibold text-gray-900 shadow-lg transition-all hover:bg-gray-100 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call {siteConfig.contact.phone}
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="overflow-hidden rounded-2xl shadow-2xl">
            <Image
              src={heroImage}
              alt="Shipping containers for sale at C-Can Sam facility"
              class="w-full h-auto object-cover"
              widths={[600, 900, 1200, 1400]}
              sizes="(max-width: 768px) 100vw, 50vw"
              loading="eager"
            />
          </div>
          <!-- Floating badge -->
          <div class="absolute -bottom-4 -left-4 rounded-xl bg-green-600 px-4 py-3 shadow-lg">
            <p class="text-sm font-semibold text-white">Own It Forever</p>
            <p class="text-lg font-bold text-white">One-Time Purchase</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Banner -->
  <div class="bg-green-600 py-4">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-6 text-center font-bold text-white">
        <span>New & Used Available</span>
        <span class="hidden sm:inline">•</span>
        <span>One-Time Purchase</span>
        <span class="hidden sm:inline">•</span>
        <span>Delivery Included</span>
      </div>
    </div>
  </div>

  <!-- Google Reviews Widget (after hero) -->
  <ReviewWidget pagePath="/storage-containers-for-sale" />

  <!-- Container Types -->
  <Section
    title="Containers For Sale"
    subtitle="Choose your size. New and used containers available with delivery throughout Saskatchewan."
    background="gray"
  >
    <div class="grid gap-6 lg:grid-cols-3">
      {containers.map((container, index) => (
        <div class={`relative rounded-2xl bg-white p-6 shadow-sm transition-shadow hover:shadow-lg ${index === 1 ? 'ring-2 ring-green-500' : ''}`}>
          {index === 1 && (
            <span class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-green-500 px-4 py-1 text-sm font-semibold text-white">
              Most Popular
            </span>
          )}

          <!-- Container Visual -->
          <div class="aspect-[3/2] overflow-hidden rounded-xl bg-gray-100">
            {index === 0 && (
              <picture>
                <source
                  srcset="/images/containers/20ft-standard-400w.webp 400w, /images/containers/20ft-standard-600w.webp 600w, /images/containers/20ft-standard-800w.webp 800w"
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  type="image/webp"
                />
                <img
                  src="/images/containers/20ft-standard.jpg"
                  alt="20 foot standard shipping container for sale"
                  class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                  width="600"
                  height="400"
                />
              </picture>
            )}
            {index === 1 && (
              <picture>
                <source
                  srcset="/images/containers/40ft-standard-400w.webp 400w, /images/containers/40ft-standard-600w.webp 600w, /images/containers/40ft-standard-800w.webp 800w"
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  type="image/webp"
                />
                <img
                  src="/images/containers/40ft-standard-new.jpg"
                  alt="40 foot standard shipping container for sale"
                  class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                  width="600"
                  height="400"
                />
              </picture>
            )}
            {index === 2 && (
              <picture>
                <source
                  srcset="/images/containers/40ft-highcube-400w.webp 400w, /images/containers/40ft-highcube-600w.webp 600w, /images/containers/40ft-highcube-800w.webp 800w"
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  type="image/webp"
                />
                <img
                  src="/images/containers/40ft-highcube-new.jpg"
                  alt="40 foot high cube shipping container for sale"
                  class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                  width="600"
                  height="400"
                />
              </picture>
            )}
          </div>

          <h3 class="mt-4 text-xl font-bold text-gray-900">{container.size}</h3>

          <dl class="mt-4 space-y-2 text-sm">
            <div class="flex justify-between">
              <dt class="text-gray-500">Dimensions</dt>
              <dd class="font-medium text-gray-900">{container.dimensions}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Capacity</dt>
              <dd class="font-medium text-gray-900">{container.capacity}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Ideal for</dt>
              <dd class="font-medium text-gray-900 text-right max-w-[60%]">{container.ideal}</dd>
            </div>
          </dl>

          <div class="mt-6 flex gap-2">
            <a
              href={whatsappLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-green-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-green-500"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us
            </a>
            <a
              href={phoneLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-primary-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-primary-500"
            >
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call Us
            </a>
          </div>
        </div>
      ))}
    </div>

    <p class="mt-8 text-center text-gray-600">
      Prices vary based on container condition (new vs. used) and current inventory.
      <br /><strong>Delivery included within 50km.</strong> <a href={phoneLink} class="font-medium text-green-600 hover:text-green-700">Call us</a> for current pricing and availability.
    </p>
  </Section>

  <!-- Why Buy Section -->
  <Section
    title="Why Buy a Container?"
    subtitle="The benefits of owning your own shipping container."
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {benefits.map((benefit) => (
        <div class="text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-lg bg-green-100 text-green-600">
            <Fragment set:html={benefit.icon} />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{benefit.title}</h3>
          <p class="mt-2 text-gray-600">{benefit.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Who Buys Section -->
  <Section
    title="Who Buys Containers?"
    subtitle="Our customers use containers for all kinds of purposes."
    background="gray"
  >
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {buyers.map((buyer) => (
        <div class="rounded-lg bg-white p-6 shadow-sm">
          <h3 class="font-semibold text-gray-900">{buyer.title}</h3>
          <p class="mt-2 text-gray-600">{buyer.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- New vs Used Section -->
  <Section
    title="New vs. Used Containers"
    subtitle="Choose the right option for your needs and budget."
  >
    <div class="grid gap-8 lg:grid-cols-2">
      <div class="rounded-2xl bg-green-50 p-8 border-2 border-green-200">
        <h3 class="text-xl font-bold text-gray-900">New Containers (One-Trip)</h3>
        <p class="mt-2 text-gray-600">Made in Asia and shipped once to North America. Like-new condition with minimal wear.</p>
        <ul class="mt-4 space-y-2">
          <li class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Excellent cosmetic condition
          </li>
          <li class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Ideal for visible locations
          </li>
          <li class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Perfect for conversions
          </li>
          <li class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Higher resale value
          </li>
        </ul>
      </div>
      <div class="rounded-2xl bg-gray-50 p-8 border-2 border-gray-200">
        <h3 class="text-xl font-bold text-gray-900">Used Containers</h3>
        <p class="mt-2 text-gray-600">Previously used for shipping cargo. Inspected and certified wind and watertight.</p>
        <ul class="mt-4 space-y-2">
          <li class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            More affordable option
          </li>
          <li class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Wind & watertight guaranteed
          </li>
          <li class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Great for storage
          </li>
          <li class="flex items-center gap-2 text-sm text-gray-700">
            <svg class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            Best value for money
          </li>
        </ul>
      </div>
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Ready to Buy a Container?"
    description="Contact us today for current inventory and pricing. We'll help you find the perfect container for your needs."
    primaryButton={{ text: "Call Now", href: phoneLink }}
    secondaryButton={{ text: "Contact Us", href: "/contact" }}
  />
</Layout>
