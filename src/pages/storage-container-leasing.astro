---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import { siteConfig } from '../config/site';
import heroImage from '../assets/images/sales-hero.webp';

// WhatsApp link with pre-filled message
const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'm interested in leasing a shipping container long-term.")}`;
const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;

// Container Types for Lease
const containers = [
  {
    size: "20' Standard",
    dimensions: "20' L × 8' W × 8'6\" H",
    capacity: "1,172 cubic feet",
    ideal: "Long-term storage, permanent job site, ongoing projects",
  },
  {
    size: "40' Standard",
    dimensions: "40' L × 8' W × 8'6\" H",
    capacity: "2,390 cubic feet",
    ideal: "Business operations, warehouse expansion, extended projects",
  },
  {
    size: "40' High Cube",
    dimensions: "40' L × 8' W × 9'6\" H",
    capacity: "2,694 cubic feet",
    ideal: "Commercial use, workshops, retail operations",
  },
];

// Benefits of Leasing
const benefits = [
  {
    title: "Lower Monthly Payments",
    description: "Extended lease terms mean lower monthly costs compared to short-term rentals. Better for your budget.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941" /></svg>`,
  },
  {
    title: "Predictable Costs",
    description: "Lock in your rate for the lease term. No surprises, easy budgeting for your business or project.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" /></svg>`,
  },
  {
    title: "Priority Service",
    description: "Lease customers get priority delivery scheduling and dedicated support throughout the term.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" /></svg>`,
  },
  {
    title: "Option to Purchase",
    description: "At the end of your lease, you may have the option to purchase the container at a reduced price.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" /></svg>`,
  },
];

// Who leases containers
const leasers = [
  { title: "Growing Businesses", description: "Expand storage capacity while preserving capital for other investments." },
  { title: "Construction Companies", description: "Long-term job sites need reliable, cost-effective storage solutions." },
  { title: "Agricultural Operations", description: "Seasonal storage year after year at predictable costs." },
  { title: "Retail & Restaurants", description: "Extra storage for inventory, equipment, or seasonal supplies." },
  { title: "Schools & Organizations", description: "Ongoing storage needs for equipment, records, and supplies." },
  { title: "Property Managers", description: "Add storage amenities for tenants without major construction." },
];

// Lease vs Rent vs Buy comparison
const comparison = [
  {
    option: "Lease",
    description: "Best for extended use (6+ months)",
    pros: ["Lower monthly rate", "Predictable budgeting", "Priority service", "Purchase option"],
    color: "purple",
  },
  {
    option: "Rent",
    description: "Best for short-term needs",
    pros: ["Maximum flexibility", "No long commitment", "Month-to-month", "Easy to return"],
    color: "blue",
  },
  {
    option: "Buy",
    description: "Best for permanent storage",
    pros: ["Own it forever", "No monthly payments", "Full customization", "Asset value"],
    color: "green",
  },
];
---

<Layout
  title="Storage Container Leasing"
  description="Long-term shipping container leases in Saskatchewan. Lower monthly rates for extended terms. 20ft and 40ft containers available with delivery."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 py-20 sm:py-28">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-10"></div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="inline-flex items-center rounded-full bg-purple-500/10 px-4 py-1.5 text-sm font-medium text-purple-300 ring-1 ring-inset ring-purple-500/20">
            Extended Terms, Better Rates
          </span>
          <h1 class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
            Storage Container
            <span class="text-purple-400">Leasing</span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-300">
            Need a container for 6 months or longer? Leasing offers lower monthly rates and predictable costs. Perfect for businesses and long-term projects throughout Saskatchewan.
          </p>

          <!-- Primary CTAs -->
          <div class="mt-10 flex flex-col gap-4 sm:flex-row">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-green-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us Now
            </a>
            <a
              href={phoneLink}
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-white px-6 py-4 text-lg font-semibold text-gray-900 shadow-lg transition-all hover:bg-gray-100 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call {siteConfig.contact.phone}
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="overflow-hidden rounded-2xl shadow-2xl">
            <Image
              src={heroImage}
              alt="Shipping containers available for long-term lease"
              class="w-full h-auto object-cover"
              widths={[600, 900, 1200, 1400]}
              sizes="(max-width: 768px) 100vw, 50vw"
              loading="eager"
            />
          </div>
          <!-- Floating badge -->
          <div class="absolute -bottom-4 -left-4 rounded-xl bg-purple-600 px-4 py-3 shadow-lg">
            <p class="text-sm font-semibold text-white">Save More</p>
            <p class="text-lg font-bold text-white">Long-Term Rates</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Banner -->
  <div class="bg-purple-600 py-4">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-6 text-center font-bold text-white">
        <span>6+ Month Terms</span>
        <span class="hidden sm:inline">•</span>
        <span>Lower Monthly Rates</span>
        <span class="hidden sm:inline">•</span>
        <span>Purchase Option Available</span>
      </div>
    </div>
  </div>

  <!-- Google Reviews Widget (after hero) -->
  <ReviewWidget pagePath="/storage-container-leasing" />

  <!-- Container Types -->
  <Section
    title="Containers For Lease"
    subtitle="Extended terms for lower monthly rates. Ideal for businesses and long-term projects."
    background="gray"
  >
    <div class="grid gap-6 lg:grid-cols-3">
      {containers.map((container, index) => (
        <div class={`relative rounded-2xl bg-white p-6 shadow-sm transition-shadow hover:shadow-lg ${index === 1 ? 'ring-2 ring-purple-500' : ''}`}>
          {index === 1 && (
            <span class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-purple-500 px-4 py-1 text-sm font-semibold text-white">
              Most Popular
            </span>
          )}

          <!-- Container Visual -->
          <div class="aspect-[3/2] overflow-hidden rounded-xl bg-gray-100">
            {index === 0 && (
              <picture>
                <source
                  srcset="/images/containers/20ft-standard-400w.webp 400w, /images/containers/20ft-standard-600w.webp 600w, /images/containers/20ft-standard-800w.webp 800w"
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  type="image/webp"
                />
                <img
                  src="/images/containers/20ft-standard.jpg"
                  alt="20 foot standard shipping container for lease"
                  class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                  width="600"
                  height="400"
                />
              </picture>
            )}
            {index === 1 && (
              <picture>
                <source
                  srcset="/images/containers/40ft-standard-400w.webp 400w, /images/containers/40ft-standard-600w.webp 600w, /images/containers/40ft-standard-800w.webp 800w"
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  type="image/webp"
                />
                <img
                  src="/images/containers/40ft-standard-new.jpg"
                  alt="40 foot standard shipping container for lease"
                  class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                  width="600"
                  height="400"
                />
              </picture>
            )}
            {index === 2 && (
              <picture>
                <source
                  srcset="/images/containers/40ft-highcube-400w.webp 400w, /images/containers/40ft-highcube-600w.webp 600w, /images/containers/40ft-highcube-800w.webp 800w"
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  type="image/webp"
                />
                <img
                  src="/images/containers/40ft-highcube-new.jpg"
                  alt="40 foot high cube shipping container for lease"
                  class="h-full w-full object-cover transition-transform duration-500 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                  width="600"
                  height="400"
                />
              </picture>
            )}
          </div>

          <h3 class="mt-4 text-xl font-bold text-gray-900">{container.size}</h3>

          <dl class="mt-4 space-y-2 text-sm">
            <div class="flex justify-between">
              <dt class="text-gray-500">Dimensions</dt>
              <dd class="font-medium text-gray-900">{container.dimensions}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Capacity</dt>
              <dd class="font-medium text-gray-900">{container.capacity}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Ideal for</dt>
              <dd class="font-medium text-gray-900 text-right max-w-[60%]">{container.ideal}</dd>
            </div>
          </dl>

          <div class="mt-6 flex gap-2">
            <a
              href={whatsappLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-green-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-green-500"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us
            </a>
            <a
              href={phoneLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-purple-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-purple-500"
            >
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call Us
            </a>
          </div>
        </div>
      ))}
    </div>

    <p class="mt-8 text-center text-gray-600">
      Lease rates depend on term length and container condition. Longer terms = lower rates.
      <br /><strong>Delivery included within 50km.</strong> <a href={phoneLink} class="font-medium text-purple-600 hover:text-purple-700">Call us</a> for a custom quote.
    </p>
  </Section>

  <!-- Why Lease Section -->
  <Section
    title="Why Lease a Container?"
    subtitle="The smart choice for extended storage needs."
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {benefits.map((benefit) => (
        <div class="text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-lg bg-purple-100 text-purple-600">
            <Fragment set:html={benefit.icon} />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{benefit.title}</h3>
          <p class="mt-2 text-gray-600">{benefit.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Comparison Section -->
  <Section
    title="Lease vs. Rent vs. Buy"
    subtitle="Choose the right option for your situation."
    background="gray"
  >
    <div class="grid gap-6 lg:grid-cols-3">
      {comparison.map((item, index) => (
        <div class={`rounded-2xl p-6 ${index === 0 ? 'bg-purple-50 border-2 border-purple-300 ring-2 ring-purple-500' : 'bg-white border-2 border-gray-200'}`}>
          {index === 0 && (
            <span class="inline-block mb-4 rounded-full bg-purple-500 px-3 py-1 text-xs font-semibold text-white">
              RECOMMENDED FOR 6+ MONTHS
            </span>
          )}
          <h3 class="text-xl font-bold text-gray-900">{item.option}</h3>
          <p class="mt-1 text-sm text-gray-600">{item.description}</p>
          <ul class="mt-4 space-y-2">
            {item.pros.map((pro) => (
              <li class="flex items-center gap-2 text-sm text-gray-700">
                <svg class={`h-5 w-5 ${index === 0 ? 'text-purple-600' : index === 1 ? 'text-blue-600' : 'text-green-600'}`} fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                {pro}
              </li>
            ))}
          </ul>
          <a
            href={index === 0 ? '#' : index === 1 ? '/storage-container-rentals' : '/storage-containers-for-sale'}
            class={`mt-6 block w-full rounded-lg py-2 text-center font-semibold transition-colors ${
              index === 0
                ? 'bg-purple-600 text-white hover:bg-purple-500'
                : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
            }`}
          >
            {index === 0 ? 'Get Lease Quote' : index === 1 ? 'View Rentals' : 'View Sales'}
          </a>
        </div>
      ))}
    </div>
  </Section>

  <!-- Who Leases Section -->
  <Section
    title="Who Leases Containers?"
    subtitle="Businesses and organizations with ongoing storage needs."
  >
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {leasers.map((leaser) => (
        <div class="rounded-lg bg-gray-50 p-6 shadow-sm">
          <h3 class="font-semibold text-gray-900">{leaser.title}</h3>
          <p class="mt-2 text-gray-600">{leaser.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Ready to Discuss a Lease?"
    description="Contact us today to discuss your long-term storage needs. We'll create a custom lease that works for your budget and timeline."
    primaryButton={{ text: "Call Now", href: phoneLink }}
    secondaryButton={{ text: "Contact Us", href: "/contact" }}
  />
</Layout>
